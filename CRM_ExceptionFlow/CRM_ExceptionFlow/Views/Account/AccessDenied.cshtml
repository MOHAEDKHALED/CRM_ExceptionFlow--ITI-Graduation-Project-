@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-ban"></i> Access Denied</h4>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-shield-alt fa-5x text-danger mb-4"></i>
                    <h5>You don't have permission to access this page</h5>
                    <p class="text-muted">Please contact your administrator if you believe this is an error.</p>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-home"></i> Go to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>