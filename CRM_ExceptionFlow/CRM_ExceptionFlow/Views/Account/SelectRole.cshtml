@{
    ViewData["Title"] = "Select Role";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRM Exception Flow</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .role-card {
            background: white;
            border-radius: 15px;
            padding: 40px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

            .role-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 40px rgba(0,0,0,0.2);
            }

        .role-icon {
            font-size: 80px;
            margin-bottom: 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="text-white mb-3">
                <i class="fas fa-briefcase"></i> CRM Exception Flow
            </h1>
            <p class="text-white h5">Select your role to get started</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-5 mb-4">
                <a href="@Url.Action("Register", new { role = "Manager" })" class="text-decoration-none">
                    <div class="role-card">
                        <i class="fas fa-user-tie role-icon"></i>
                        <h3>Manager</h3>
                        <p class="text-muted">Manage teams, customers, and deals</p>
                        <div class="mt-3">
                            <span class="badge bg-primary">Full Access</span>
                            <span class="badge bg-info">Reports</span>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-5 mb-4">
                <a href="@Url.Action("Register", new { role = "Employee" })" class="text-decoration-none">
                    <div class="role-card">
                        <i class="fas fa-user role-icon"></i>
                        <h3>Employee</h3>
                        <p class="text-muted">Track exceptions and tasks</p>
                        <div class="mt-3">
                            <span class="badge bg-success">Exceptions</span>
                            <span class="badge bg-warning">Dashboard</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Login" class="btn btn-outline-light btn-lg">
                <i class="fas fa-sign-in-alt"></i> Already have an account? Login
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>