@using MyException = CRM_ExceptionFlow.Models.Exception
@model MyException

@{
    ViewData["Title"] = "Exception Details";
}

<style>
    .ai-recommendation-card {
        border-left: 4px solid #007bff;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        animation: slideIn 0.5s ease-out;
    }
    @@keyframes slideIn {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .confidence-meter {
        height: 10px;
        background: #e9ecef;
        border-radius: 5px;
        overflow: hidden;
    }
    .confidence-fill {
        height: 100%;
        background: linear-gradient(90deg, #28a745, #ffc107, #dc3545);
        transition: width 1s ease;
    }
    .loading-spinner {
        display: inline-block;
        width: 20px;
        height: 20px;
        border: 3px solid rgba(255,255,255,.3);
        border-radius: 50%;
        border-top-color: #fff;
        animation: spin 1s ease-in-out infinite;
    }
    @@keyframes spin {
        to { transform: rotate(360deg); }
    }
    .history-timeline {
        position: relative;
        padding-left: 30px;
    }
    .history-timeline::before {
        content: '';
        position: absolute;
        left: 10px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: #dee2e6;
    }
    .history-item {
        position: relative;
        padding-bottom: 20px;
    }
    .history-item::before {
        content: '';
        position: absolute;
        left: -24px;
        top: 5px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: #007bff;
        border: 2px solid white;
    }
</style>

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="fas fa-exclamation-triangle text-warning"></i> Exception Details</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Exceptions</a></li>
                    <li class="breadcrumb-item active">Details #@Model.Id</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
        </div>
    </div>

    <!-- Exception Info Card -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-info-circle"></i> Exception Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Exception ID:</strong> <span class="badge bg-dark">#@Model.Id</span></p>
                    <p><strong>Project ID:</strong> <span class="badge bg-info">@Model.ProjectId</span></p>
                    <p><strong>Module:</strong> <span class="badge bg-secondary">@Model.Module</span></p>
                    <p><strong>Status:</strong> <span class="badge status-@Model.Status.ToLower()">@Model.Status</span></p>
                    <p><strong>Priority:</strong> <span class="badge priority-@Model.Priority.ToLower()">@Model.Priority</span></p>
                </div>
                <div class="col-md-6">
                    <p><strong>Reported By:</strong> <i class="fas fa-user"></i> @Model.ReportedByUser?.FullName</p>
                    <p><strong>Assigned To:</strong> 
                        @if (Model.AssignedToUser != null)
                        {
                            <i class="fas fa-user-check"></i> @Model.AssignedToUser.FullName
                        }
                        else
                        {
                            <em class="text-muted">Not assigned yet</em>
                        }
                    </p>
                    <p><strong>Reported At:</strong> @Model.ReportedAt.ToString("dd MMM yyyy, hh:mm tt")</p>
                    <p><strong>Resolved At:</strong> 
                        @if (Model.ResolvedAt.HasValue)
                        {
                            @Model.ResolvedAt.Value.ToString("dd MMM yyyy, hh:mm tt")
                        }
                        else
                        {
                            <em class="text-muted">Not yet resolved</em>
                        }
                    </p>
                </div>
            </div>
            <hr>
            <h6 class="fw-bold"><i class="fas fa-heading"></i> Title:</h6>
            <p>@Model.Title</p>
            
            <h6 class="fw-bold"><i class="fas fa-align-left"></i> Description:</h6>
            <p class="text-muted">@Model.Description</p>
            
            @if (!string.IsNullOrEmpty(Model.StackTrace))
            {
                <h6 class="fw-bold"><i class="fas fa-code"></i> Stack Trace:</h6>
                <pre class="bg-light p-3 border rounded" style="max-height: 300px; overflow-y: auto;"><code>@Model.StackTrace</code></pre>
            }

            @if (!string.IsNullOrEmpty(Model.ResolutionNotes))
            {
                <h6 class="fw-bold"><i class="fas fa-check-circle"></i> Resolution Notes:</h6>
                <div class="alert alert-success">
                    @Model.ResolutionNotes
                </div>
            }
        </div>
    </div>

    <!-- AI Recommendation Section -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <h5 class="mb-0"><i class="fas fa-robot"></i> AI-Powered Recommendation</h5>
        </div>
        <div class="card-body">
            <div class="text-center mb-3">
                <button id="getRecommendationBtn" class="btn btn-lg btn-primary">
                    <i class="fas fa-magic"></i> Get AI Recommendation
                </button>
            </div>
            
            <!-- Loading State -->
            <div id="loadingState" class="text-center d-none">
                <div class="loading-spinner"></div>
                <p class="mt-2">Analyzing exception and searching database...</p>
            </div>
            
            <!-- Recommendation Result -->
            <div id="recommendationResult" class="d-none">
                <div class="ai-recommendation-card p-4 rounded shadow">
                    <h6 class="mb-3"><i class="fas fa-lightbulb"></i> Recommended Solution:</h6>
                    <p id="recommendationText" class="mb-4"></p>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Confidence Score:</strong></p>
                            <div class="confidence-meter">
                                <div id="confidenceFill" class="confidence-fill"></div>
                            </div>
                            <small id="confidenceText" class="mt-1 d-block"></small>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Source:</strong> <span id="sourceText" class="badge bg-light text-dark"></span></p>
                            <p><strong>Model:</strong> <span id="modelText" class="badge bg-light text-dark"></span></p>
                            <p><strong>Similar Cases:</strong> <span id="similarCount" class="badge bg-success"></span></p>
                        </div>
                    </div>
                    
                    <hr class="bg-white">
                    
                    <div class="text-center">
                        <button class="btn btn-success me-2" onclick="markHelpful(true)">
                            <i class="fas fa-thumbs-up"></i> Helpful
                        </button>
                        <button class="btn btn-danger" onclick="markHelpful(false)">
                            <i class="fas fa-thumbs-down"></i> Not Helpful
                        </button>
                    </div>
                </div>
            </div>

            <!-- Previous Recommendations -->
            @if (Model.AIRecommendations != null && Model.AIRecommendations.Any())
            {
                <hr class="my-4">
                <h6 class="fw-bold"><i class="fas fa-history"></i> Previous Recommendations:</h6>
                @foreach (var rec in Model.AIRecommendations.OrderByDescending(r => r.GeneratedAt))
                {
                    <div class="card mb-2">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <small class="text-muted">
                                        @rec.GeneratedAt.ToString("dd MMM yyyy, hh:mm tt") - 
                                        <span class="badge bg-info">@rec.Source</span>
                                    </small>
                                </div>
                                <div>
                                    <span class="badge bg-success">@((rec.ConfidenceScore * 100).ToString("F0"))% confidence</span>
                                </div>
                            </div>
                            <p class="mt-2 mb-0">@rec.RecommendationText</p>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <!-- Status Update Card -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-warning">
            <h5 class="mb-0"><i class="fas fa-tasks"></i> Update Status</h5>
        </div>
        <div class="card-body">
            <form id="statusUpdateForm">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">New Status</label>
                        @{
                            var statuses = new[]
                            {
                                new Microsoft.AspNetCore.Mvc.Rendering.SelectListItem("Open", "Open", Model?.Status == "Open"),
                                new Microsoft.AspNetCore.Mvc.Rendering.SelectListItem("In Progress", "InProgress", Model?.Status == "InProgress"),
                                new Microsoft.AspNetCore.Mvc.Rendering.SelectListItem("Resolved", "Resolved", Model?.Status == "Resolved"),
                                new Microsoft.AspNetCore.Mvc.Rendering.SelectListItem("Closed", "Closed", Model?.Status == "Closed")
                            };
                        }
                        <select class="form-select" id="newStatus" asp-for="Status" asp-items="statuses" required></select>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-bold">Resolution Notes</label>
                        <textarea class="form-control" id="resolutionNotes" rows="3" placeholder="Add notes about the resolution...">@Model.ResolutionNotes</textarea>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Status
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Exception History -->
    @if (Model.History != null && Model.History.Any())
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-history"></i> Exception History</h5>
            </div>
            <div class="card-body">
                <div class="history-timeline">
                    @foreach (var history in Model.History.OrderByDescending(h => h.ChangedAt))
                    {
                        <div class="history-item">
                            <small class="text-muted">@history.ChangedAt.ToString("dd MMM yyyy, hh:mm tt")</small>
                            <p class="mb-0">
                                <strong>@history.ChangedByUserName</strong> changed status to 
                                <span class="badge status-@history.Status.ToLower()">@history.Status</span>
                            </p>
                            @if (!string.IsNullOrEmpty(history.Notes))
                            {
                                <p class="text-muted mb-0"><em>@history.Notes</em></p>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
<script>
    const exceptionId = @Model.Id;

    // Get AI Recommendation
    document.getElementById('getRecommendationBtn').addEventListener('click', async function() {
        const btn = this;
        const loading = document.getElementById('loadingState');
        const result = document.getElementById('recommendationResult');
        
        btn.classList.add('d-none');
        loading.classList.remove('d-none');
        result.classList.add('d-none');
        
        try {
            const response = await fetch(`/Exceptions/GetAIRecommendation?id=${exceptionId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            
            const data = await response.json();
            
            if (data.success) {
                document.getElementById('recommendationText').textContent = data.data.recommendation;
                document.getElementById('confidenceText').textContent = 
                    `${(data.data.confidence * 100).toFixed(0)}% confidence`;
                document.getElementById('confidenceFill').style.width = 
                    `${(data.data.confidence * 100)}%`;
                document.getElementById('sourceText').textContent = data.data.source;
                document.getElementById('modelText').textContent = data.data.model;
                document.getElementById('similarCount').textContent = 
                    data.data.similarExceptionsFound || 0;
                
                loading.classList.add('d-none');
                result.classList.remove('d-none');
            } else {
                alert('Error: ' + data.message);
                btn.classList.remove('d-none');
                loading.classList.add('d-none');
            }
        } catch (error) {
            alert('Failed to get recommendation: ' + error.message);
            btn.classList.remove('d-none');
            loading.classList.add('d-none');
        }
    });
    
    // Status Update Form
    document.getElementById('statusUpdateForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const status = document.getElementById('newStatus').value;
        const notes = document.getElementById('resolutionNotes').value;
        
        if (!status) {
            alert('Please select a status');
            return;
        }
        
        try {
            const response = await fetch('/Exceptions/UpdateStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: new URLSearchParams({
                    id: exceptionId,
                    status: status,
                    notes: notes
                })
            });
            
            const data = await response.json();
            
            if (data.success) {
                alert('Status updated successfully!');
                location.reload();
            } else {
                alert('Error: ' + data.message);
            }
        } catch (error) {
            alert('Failed to update status: ' + error.message);
        }
    });
    
    function markHelpful(isHelpful) {
        alert(isHelpful ? 'Thank you for your feedback!' : 'We will work on improving our recommendations.');
    }
</script>
}
