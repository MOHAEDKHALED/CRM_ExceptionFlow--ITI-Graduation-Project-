@model CRM_ExceptionFlow.Models.Exception

@{
    ViewData["Title"] = "Delete Exception";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="fas fa-trash text-danger"></i> Delete Exception</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Exceptions</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">Details #@Model.Id</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                <strong>Warning!</strong> Are you sure you want to delete this exception? This action cannot be undone.
            </div>

            <h6 class="fw-bold mb-3">Exception Details:</h6>

            <dl class="row">
                <dt class="col-sm-3">Exception ID:</dt>
                <dd class="col-sm-9"><span class="badge bg-dark">#@Model.Id</span></dd>

                <dt class="col-sm-3">Project ID:</dt>
                <dd class="col-sm-9"><span class="badge bg-info">@Model.ProjectId</span></dd>

                <dt class="col-sm-3">Module:</dt>
                <dd class="col-sm-9"><span class="badge bg-secondary">@Model.Module</span></dd>

                <dt class="col-sm-3">Title:</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9"><span class="badge status-@Model.Status.ToLower()">@Model.Status</span></dd>

                <dt class="col-sm-3">Priority:</dt>
                <dd class="col-sm-9"><span class="badge priority-@Model.Priority.ToLower()">@Model.Priority</span></dd>

                <dt class="col-sm-3">Reported By:</dt>
                <dd class="col-sm-9">@Model.ReportedByUser?.FullName</dd>

                <dt class="col-sm-3">Reported At:</dt>
                <dd class="col-sm-9">@Model.ReportedAt.ToString("dd MMM yyyy, hh:mm tt")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Yes, Delete This Exception
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
