@model IEnumerable<CRM_ExceptionFlow.Models.Exception>

@{
    ViewData["Title"] = "Exceptions List";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="fas fa-exclamation-triangle text-warning"></i> Exceptions Management</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Report New Exception
            </a>
        </div>
    </div>

    <!-- Filters Card -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-filter"></i> Filters & Search</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Status</label>
                        <select name="status" class="form-select">
                            <option value="">All Statuses</option>
                            <option value="Open" selected="@(ViewBag.Status == "Open")">Open</option>
                            <option value="InProgress" selected="@(ViewBag.Status == "InProgress")">In Progress</option>
                            <option value="Resolved" selected="@(ViewBag.Status == "Resolved")">Resolved</option>
                            <option value="Closed" selected="@(ViewBag.Status == "Closed")">Closed</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Module</label>
                        <select name="module" class="form-select">
                            <option value="">All Modules</option>
                            <option value="Customers" selected="@(ViewBag.Module == "Customers")">Customers</option>
                            <option value="Deals" selected="@(ViewBag.Module == "Deals")">Deals</option>
                            <option value="Interactions" selected="@(ViewBag.Module == "Interactions")">Interactions</option>
                            <option value="Database" selected="@(ViewBag.Module == "Database")">Database</option>
                            <option value="API" selected="@(ViewBag.Module == "API")">API</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Priority</label>
                        <select name="priority" class="form-select">
                            <option value="">All Priorities</option>
                            <option value="Low" selected="@(ViewBag.Priority == "Low")">Low</option>
                            <option value="Medium" selected="@(ViewBag.Priority == "Medium")">Medium</option>
                            <option value="High" selected="@(ViewBag.Priority == "High")">High</option>
                            <option value="Critical" selected="@(ViewBag.Priority == "Critical")">Critical</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Search</label>
                        <input type="text" name="search" class="form-control" placeholder="Search..." value="@ViewBag.Search" />
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Apply Filters
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-redo"></i> Clear Filters
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5><i class="fas fa-folder-open"></i> Open</h5>
                    <h2>@Model.Count(e => e.Status == "Open")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5><i class="fas fa-spinner"></i> In Progress</h5>
                    <h2>@Model.Count(e => e.Status == "InProgress")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5><i class="fas fa-check-circle"></i> Resolved</h5>
                    <h2>@Model.Count(e => e.Status == "Resolved")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-secondary">
                <div class="card-body">
                    <h5><i class="fas fa-archive"></i> Closed</h5>
                    <h2>@Model.Count(e => e.Status == "Closed")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Exceptions Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-list"></i> All Exceptions (@Model.Count())</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Project ID</th>
                                <th>Module</th>
                                <th>Title</th>
                                <th>Status</th>
                                <th>Priority</th>
                                <th>Reported By</th>
                                <th>Reported At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>#@item.Id</strong></td>
                                    <td><span class="badge bg-info">@item.ProjectId</span></td>
                                    <td><span class="badge bg-secondary">@item.Module</span></td>
                                    <td>
                                        <strong>@item.Title</strong>
                                        <br />
                                        <small class="text-muted">@item.Description.Substring(0, Math.Min(50, item.Description.Length))...</small>
                                    </td>
                                    <td>
                                        <span class="badge status-@item.Status.ToLower()">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge priority-@item.Priority.ToLower()">
                                            @item.Priority
                                        </span>
                                    </td>
                                    <td>
                                        <i class="fas fa-user"></i> @item.ReportedByUser?.FullName
                                    </td>
                                    <td>
                                        @item.ReportedAt.ToString("dd MMM yyyy")
                                        <br />
                                        <small class="text-muted">@item.ReportedAt.ToString("hh:mm tt")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No exceptions found</h5>
                    <p class="text-muted">Try adjusting your filters or create a new exception</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Report First Exception
                    </a>
                </div>
            }
        </div>
    </div>
</div>